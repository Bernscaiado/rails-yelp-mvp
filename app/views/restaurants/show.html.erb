
<div class="card" >
  <div class="body">
    <h2><%= @restaurant.name %></h2>
    <table class="table">
      <thead>
        <tr>
          <th><%= @restaurant.address %></th>
          <th><%= @restaurant.phone_number %></th>
          <th><%= @restaurant.category %></th>
        </tr>
      </thead>
    </table>


    <table class="table flex">
      <thead>
        <tr>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>

      <tbody>
        <% @restaurant.reviews.each do |review| %>
          <tr>
            <td><%= review.content %></td>
            <td><%= review.rating %>/5</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div>
      <p>
        <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-success d-flex justify-content-center' %>
      </p>

      <p>
        <%= link_to 'Back', restaurants_path, class: 'btn btn-primary d-flex justify-content-center' %>
      </p>
    </div>
  </div>
</div>


